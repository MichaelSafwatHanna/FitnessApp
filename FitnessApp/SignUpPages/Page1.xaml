<Page x:Class="FitnessApp.SignUpPages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
      Title="SignUpPage1" Width="Auto" Height="Auto" Margin="0,60,0,0">

    <StackPanel HorizontalAlignment="Center" Width="auto" Height="auto">
        <!--first name and last name-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox   materialDesign:HintAssist.Hint="First Name" 
                       Margin="0,0,15,0"
                       VerticalAlignment="Center" 
                       Width="220"
                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />

            <TextBox   materialDesign:HintAssist.Hint="Last Name" 
                       VerticalAlignment="Center" 
                       Width="220"
                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />
        
        </StackPanel>
        <TextBox   materialDesign:HintAssist.Hint="Username" 
                   Margin="0,20,0,0"
                   VerticalAlignment="Center" 
                   Width="455"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />
        <TextBox   materialDesign:HintAssist.Hint="Email" 
                   Margin="0,20,0,0"
                   VerticalAlignment="Center" 
                   Width="455"
                   Style="{StaticResource MaterialDesignFloatingHintTextBox}"  />
        <!--passsword and cofirm-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <PasswordBox x:Name="password" 
                         Width="220"
                         materialDesign:HintAssist.Hint="Password" 
                         Margin="0,0,15,0"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>

            <PasswordBox x:Name="passwordConfirmation" 
                         materialDesign:HintAssist.Hint="confirm Password" 
                         Width="220"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
        </StackPanel>
        <Button
            x:Name="signInButton"
            Style="{StaticResource MaterialDesignRaisedDarkButton}" 
            Width="100" 
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="0,60,0,0"
            FontSize="12"
            Click="NextButton_Click">
            Next
        </Button>
    </StackPanel>
</Page>
